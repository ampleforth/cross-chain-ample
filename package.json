{
  "name": "ampl-chainbridge",
  "version": "0.0.9",
  "description": "EVM compatible Multichain Ampl using Chainsafe's chainbridge",
  "repository": "https://github.com/ampleforth/ampl-chainbridge",
  "author": "eng@ampleforth.org",
  "scripts": {
    "compile": "yarn buidler compile",
    "test": "yarn buidler test",
    "test-ganache": "yarn buidler test --network ganache",
    "coverage": "yarn buidler coverage --testfiles 'test/unit/*.ts'",
    "format": "yarn prettier --config .prettierrc --write '**/*.js' 'contracts/**/*.sol'",
    "lint": "yarn solhint 'contracts/**/*.sol' && yarn eslint ./test *.js --cache --fix"
  },
  "pre-commit": [
    "lint",
    "format"
  ],
  "dependencies": {
    "@nomiclabs/buidler-ganache": "^1.3.3",
    "@openzeppelin/contracts": "^3.2.0",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "chainbridge-solidity": "https://github.com/ChainSafe/chainbridge-solidity#v1.0.0",
    "uFragments": "https://github.com/ampleforth/uFragments#v1.0.4"
  },
  "devDependencies": {
    "@nomiclabs/buidler": "^1.4.5",
    "@nomiclabs/buidler-ethers": "^2.0.0",
    "@nomiclabs/buidler-waffle": "^2.1.0",
    "@openzeppelin/buidler-upgrades": "^1.0.2",
    "@openzeppelin/upgrades": "^2.8.0",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.1",
    "bignumber.js": "^9.0.0",
    "chai": "^4.2.0",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "eslint-config-mocha": "0.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-mocha-only": "0.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^1.3.2",
    "eslint-plugin-spellcheck": "0.0.10",
    "eslint-plugin-standard": "^1.3.3",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.13",
    "pre-commit": "^1.2.2",
    "prettier": "^2.1.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.57",
    "solc": "0.6.4",
    "solhint": "^3.2.0",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.10",
    "stochasm": "^0.5.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
